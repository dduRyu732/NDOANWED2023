@model IEnumerable<NDOANWED2023.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách</h2>

<p>
    @Html.ActionLink("Thêm Mới Sản Phẩm", "UploadProduct")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameDecription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.NameCate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ProName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        <img src="@Url.Content(item.ProImage)" width="100" height="100" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NameDecription)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreatedDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category.NameCate)
    </td>
    <td>
        @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.ProID }, new { @class = "btn btn-default btn-sm" }) |
        @Html.ActionLink("Chi Tiết", "Details", new { id = item.ProID }, new { @class = "btn btn-default btn-sm" }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.ProID }, new { @class = "btn btn-default btn-sm" })
    </td>
</tr>
}

</table>
